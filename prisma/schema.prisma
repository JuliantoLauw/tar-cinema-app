datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Movie {
  id        String @id @default(cuid())
  title     String
  poster    String
  synopsis  String
  duration  String
  genre     String
  rating    String
  director  String
  actors    String
  trailer   String?
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
}

model Order {
  id          String   @id @default(cuid())
  bookingCode String   @unique
  movieTitle  String
  cinema      String
  showtime    String   // Contoh: "Senin, 20 Nov 2025 - 19:00"
  seats       String   // Disimpan sebagai text, misal: "A1, A2"
  totalPrice  Float
  status      String   @default("Berhasil")
  createdAt   DateTime @default(now())
}
